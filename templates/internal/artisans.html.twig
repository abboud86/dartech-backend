{# Internal QA — List Artisans (verified + ≥1 published service) #}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Internal • Artisans</title>
  <meta name="robots" content="noindex,nofollow">
  <meta http-equiv="Cache-Control" content="no-store">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,"Helvetica Neue",Arial,sans-serif;margin:24px;line-height:1.45}
    h1{font-size:20px;margin:0 0 12px}
    .meta{color:#666;margin-bottom:16px}
    .row{display:flex;gap:12px;align-items:flex-end;margin-bottom:16px;flex-wrap:wrap}
    .row label{display:flex;flex-direction:column;font-size:12px;color:#333}
    input[type="text"],input[type="number"]{padding:6px 8px;border:1px solid #ccc;border-radius:6px;min-width:160px}
    button{padding:8px 12px;border:1px solid #222;background:#222;color:#fff;border-radius:8px;cursor:pointer}
    table{width:100%;border-collapse:collapse;margin-top:8px}
    th,td{border:1px solid #eee;padding:8px 10px;text-align:left;vertical-align:top}
    th{background:#fafafa;font-weight:600}
    .right{text-align:right}
    nav{display:flex;gap:8px;align-items:center;margin-top:16px}
    .tag{display:inline-block;padding:2px 6px;border:1px solid #ddd;border-radius:999px;font-size:12px;color:#444;background:#f8f8f8}
    .muted{color:#777}
    .ok{color:#1a7f37;font-weight:600}
    a.button, .button {display:inline-block;padding:8px 12px;border:1px solid #222;border-radius:8px;text-decoration:none}
  </style>
</head>
<body>
  <h1>Artisans (KYC = verified • services publiés ≥ 1)</h1>
  <div class="meta">
    Total: <strong>{{ pagination.total }}</strong> • Page {{ pagination.page }} • Limite {{ pagination.limit }}
    {% if filters.commune %} • Filtre commune: <span class="tag">{{ filters.commune }}</span>{% endif %}
  </div>

  <form class="row" method="get" action="">
    <label>Commune
      <input type="text" name="commune" value="{{ filters.commune|default('')|e }}">
    </label>
    <label>Limite
      <input type="number" name="limit" min="1" max="100" value="{{ pagination.limit }}">
    </label>
    <button type="submit">Filtrer</button>
    {% if filters.commune %}
      <a href="?limit={{ pagination.limit }}" class="muted">Reset filtre</a>
    {% endif %}
  </form>

  <table>
    <thead>
      <tr>
        <th class="right">ID</th>
        <th>Nom</th>
        <th>Slug</th>
        <th>Wilaya</th>
        <th>Commune</th>
        <th>Services publiés</th>
        <th>Créé le</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    {% for ap in items %}
      <tr>
        <td class="right">{{ ap.id }}</td>
        <td>{{ ap.displayName ?? '—' }}</td>
        <td><span class="tag">{{ ap.slug }}</span></td>
        <td>{{ ap.wilaya ?? '—' }}</td>
        <td>{{ ap.commune ?? '—' }}</td>
        <td class="ok">≥ 1</td>
        <td>{{ ap.createdAt ? ap.createdAt|date('Y-m-d H:i') : '—' }}</td>
        <td>
          <a class="button" href="{{ path('internal_artisan_show', { id: ap.id }) }}">Voir la fiche</a>
        </td>
      </tr>
    {% else %}
      <tr><td colspan="8" class="muted">Aucun artisan ne correspond aux critères.</td></tr>
    {% endfor %}
    </tbody>
  </table>

  <nav>
    {% if pagination.hasPrev %}
      <a class="button" href="?page={{ pagination.page - 1 }}&limit={{ pagination.limit }}&commune={{ filters.commune|default('')|url_encode }}">← Précédent</a>
    {% endif %}
    {% if pagination.hasNext %}
      <a class="button" href="?page={{ pagination.page + 1 }}&limit={{ pagination.limit }}&commune={{ filters.commune|default('')|url_encode }}">Suivant →</a>
    {% endif %}
  </nav>
</body>
</html>
